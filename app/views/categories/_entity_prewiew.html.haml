%ul.small-block-grid-2.large-block-grid-3
  - entity_category_collection.each do |entity|
    %li
      %ul.pricing-table
        = image_tag entity.image.nil? ? "/img/entity/default.jpg" : entity.image.url
        %li.bullet-item= link_to entity.name, category_entity_path(@category, entity)
        %li.bullet-item
          - unless entity.try(:technology_ids).empty?
            - entity.technologies.each do |technology|
              = image_tag technology.label_url
            %br
          %br
          = link_to entity.manufacturer_name, category_manufacturer_path(@category, entity.manufacturer)
        %li.bullet-item= entity.characteristics
        %li.price
          = entity.price
          = entity.currency_abbreviation
        %li.cta-button= link_to "Подробнее", category_entity_path(@category, entity), class: "button radius"