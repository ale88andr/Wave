= form_for [:backend, @attribute], html:{ class: "custom" } do |f|
  .row.collapse
    .small-4.large-3
      %span.prefix= f.label :name, "Наименование аттрибута"
    .small-8.large-9
      = f.text_field :name, :autofocus => true, placeholder: "Введите название аттрибута"
  .row.collapse
    .large-4
      = f.label :unit_id, "Выберите единицу измерения аттрибута :"
    .large-4.columns
      = #f.collection_select :parent_id, @units, :id, :name, class: "small secondary radius button dropdown", include_blank: 'Нет'
  %br
  %div= f.submit "Создать аттрибут", class: "button radius"