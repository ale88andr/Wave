%tr
  %td
    %b= link_to entity.name, backend_entity_path(entity)
  %td= entity.category.name
  %td= trim entity.characteristics
  %td= "#{entity.availability} шт."
  %td= visible entity.published
  %td= link_to "Изменить", edit_backend_entity_path(entity)
  %td= link_to "Удалить",  backend_entity_path(entity), method: :delete, :data => { confirm: "Вы уверенны, что хотите удалить товар '#{entity.name}'" }