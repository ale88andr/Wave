.reveal-modal.medium#enter
  .large-8.large-centered.columns
    %h2.subheader Вход в аккаунт
    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      .row.collapse
        .small-6.large-3.columns
          %span.prefix= f.label :name, 'Ваше имя'
        .small-8.large-9.columns
          = f.text_field :name, :autofocus => true
        .small-4.large-3.columns
          %span.prefix= f.label :password, 'Ваш пароль'
        .small-8.large-9.columns
          = f.password_field :password
        - if devise_mapping.rememberable?
          %div
            = f.check_box :remember_me
            = f.label :remember_me, 'Длительная сессия'
        %div= f.submit "Войти", class: "button radius large-5"
    .sub-nav
      %dt Дополнительно :
      %dd.active= link_to "Регистрация", new_registration_path(resource_name)
      %dd= link_to "Забыли пароль?", new_password_path(resource_name)
  %a.close-reveal-modal &#215;